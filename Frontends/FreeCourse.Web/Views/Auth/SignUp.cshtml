
@{
    ViewData["Title"] = "SignUp";
}

@model FreeCourse.Web.Models.SingUpInput


<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"> Kayıt Olmak</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="SignUp" method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" for="exampleInputUserName1" class="form-label"></label>
                        <input type="text" asp-for="UserName" class="form-control" id="exampleInputUserName1">
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" for="exampleInputEmail1" class="form-label"></label>
                        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="City" for="exampleInputCity1" class="form-label"></label>
                        <input type="text" asp-for="City" class="form-control" id="exampleInputCity1">
                        <span class="text-danger" asp-validation-for="City"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" for="exampleInputPassword1" class="form-label"></label>
                        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" for="exampleInputConfirmPassword1" class="form-label"></label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputConfirmPassword1">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </form>
            </div>
        </div>
    </div>
</div>